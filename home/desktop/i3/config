#gaps inner 10

set $mode_gaps Gaps: (o) outer, (i) inner, (0) zero, r (reset)
set $mode_gaps_outer Outer Gaps: +|-|0 (global), Shift + +|-|0 (local)
set $mode_gaps_inner Inner Gaps: +|-|0 (global), Shift + +|-|0 (local)
bindsym $mod+Shift+g mode "$mode_gaps"

mode "$mode_gaps" {
        bindsym o      mode "$mode_gaps_outer"
        bindsym i      mode "$mode_gaps_inner"
        bindsym 0      gaps inner all set 0; gaps outer all set 0; mode "default"
        bindsym r      gaps inner all set 10; gaps outer all set 0; mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

mode "$mode_gaps_inner" {
        bindsym plus  gaps inner all plus 5
        bindsym minus gaps inner all minus 5
        bindsym 0     gaps inner all set 0; mode "default"

        bindsym Shift+plus  gaps inner current plus 5
        bindsym Shift+minus gaps inner current minus 5
        bindsym Shift+0     gaps inner current set 0; mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
mode "$mode_gaps_outer" {
        bindsym plus  gaps outer all plus 5
        bindsym minus gaps outer all minus 5
        bindsym 0     gaps outer all set 0; mode "default"

        bindsym Shift+plus  gaps outer current plus 5
        bindsym Shift+minus gaps outer current minus 5
        bindsym Shift+0     gaps outer current set 0; mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}


